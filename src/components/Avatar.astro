---
interface Props {
  size?: "sm" | "md" | "lg";
}

const { size = "md" } = Astro.props;
---

<div class={`avatar avatar-${size}`}>
  <span class="avatar-initials">--</span>
</div>

<style>
  .avatar {
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--color-accent) 0%, #163a65 100%);
    color: white;
    font-weight: 700;
    flex-shrink: 0;
    position: relative;
    overflow: hidden;
  }

  .avatar::before {
    content: "";
    position: absolute;
    top: -2px;
    left: -2px;
    right: -2px;
    bottom: -2px;
    background: linear-gradient(
      135deg,
      var(--color-accent),
      #163a65,
      var(--color-accent)
    );
    border-radius: 50%;
    z-index: -1;
    opacity: 0;
    transition: opacity 0.3s;
  }

  .avatar:hover::before {
    opacity: 0.3;
  }

  .avatar-sm {
    width: 32px;
    height: 32px;
    font-size: 0.75rem;
  }

  .avatar-md {
    width: 48px;
    height: 48px;
    font-size: 1rem;
  }

  .avatar-lg {
    width: 64px;
    height: 64px;
    font-size: 1.25rem;
  }

  .avatar-initials {
    text-transform: uppercase;
    letter-spacing: 0.5px;
    user-select: none;
  }
</style>

<script>
  // Flag to prevent infinite loops
  let isUpdating = false;

  // Función para obtener las iniciales del usuario
  function updateAvatarInitials() {
    // Prevent recursive calls
    if (isUpdating) return;

    isUpdating = true;

    const userStr = localStorage.getItem("user");

    // Get ALL avatar-initials elements (since there might be multiple on the page)
    const avatarElements = document.querySelectorAll(".avatar-initials");

    if (userStr && avatarElements.length > 0) {
      try {
        const user = JSON.parse(userStr);
        const nombre = user.nombre || "";
        const apellido = user.apellido || "";

        const inicial1 = nombre.charAt(0).toUpperCase();
        const inicial2 = apellido.charAt(0).toUpperCase();
        const initials = inicial1 + inicial2 || "U";

        // Update ALL avatar elements ONLY if they have default values
        avatarElements.forEach((element) => {
          if (element.textContent === "--" || element.textContent === "U") {
            element.textContent = initials;
          }
        });
      } catch (e) {
        console.error("Error parsing user data:", e);
        avatarElements.forEach((element) => {
          if (element.textContent === "--") {
            element.textContent = "U";
          }
        });
      }
    }

    isUpdating = false;
  }

  // Actualizar cuando el DOM esté listo
  if (document.readyState === "loading") {
    document.addEventListener("DOMContentLoaded", updateAvatarInitials);
  } else {
    updateAvatarInitials();
  }

  // Observar SOLO cuando se añaden nuevos elementos avatar (no cambios de texto)
  const observer = new MutationObserver((mutations) => {
    // Check if any new avatar-initials elements were added
    const hasNewAvatars = mutations.some((mutation) => {
      return Array.from(mutation.addedNodes).some((node) => {
        if (node.nodeType === 1) {
          // Element node
          return (
            node.classList?.contains("avatar-initials") ||
            node.querySelector?.(".avatar-initials")
          );
        }
        return false;
      });
    });

    if (hasNewAvatars) {
      setTimeout(updateAvatarInitials, 50); // Small delay to prevent rapid firing
    }
  });

  // Observar cambios en el body
  if (document.body) {
    observer.observe(document.body, {
      childList: true,
      subtree: true,
      // NO observar characterData para evitar loop infinito
    });
  }
</script>
