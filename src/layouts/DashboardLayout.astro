---
import Sidebar from "../components/dashboard/Sidebar.astro";
import Dark from "../components/icons/Dark.astro";
import Light from "../components/icons/Light.astro";
import "../styles/index.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Sistema de Registro de Ventas JLC" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | JLC Ventas</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="dashboard-layout">
      <Sidebar />
      <main class="dashboard-content">
        <header class="dashboard-header">
          <h1 class="page-title">{title}</h1>
          <button
            id="theme-toggle"
            class="theme-toggle-btn"
            title="Toggle theme"
          >
            <Dark />
            <Light />
          </button>
        </header>
        <slot />
      </main>
    </div>
  </body>
</html>

<style>
  .dashboard-layout {
    display: flex;
    min-height: 100vh;
    background-color: var(--color-bg-main);
    transition: background-color 0.3s ease;
  }

  .dashboard-content {
    flex-grow: 1;
    padding: 2rem;
    overflow-y: auto;
  }

  .dashboard-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
  }
  .page-title {
    font-size: 1.875rem;
    font-weight: 700;
    color: var(--color-text-main);
  }
  .theme-toggle-btn {
    background-color: var(--color-bg-card);
    border: 1px solid var(--color-border);
    border-radius: 9999px;
    padding: 0.5rem;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-text-secondary);
    transition: all 0.3s ease;
  }
  .theme-toggle-btn:hover {
    border-color: var(--color-accent);
    color: var(--color-accent);
  }
  .toggle-icon {
    width: 1.25rem;
    height: 1.25rem;
  }

  @media (max-width: 768px) {
    .dashboard-layout {
      flex-direction: column;
    }
    .dashboard-content {
      padding: 1rem;
    }
    .page-title {
      font-size: 1.5rem;
    }
  }
</style>

<script is:inline>
  // ðŸ”’ AUTHENTICATION GUARD - Protege rutas del dashboard
  (function () {
    const token = localStorage.getItem("token");
    const userStr = localStorage.getItem("user");

    if (!token || !userStr) {
      // Sin token = redirigir al login
      window.location.href = "/login";
      return;
    }

    try {
      const user = JSON.parse(userStr);
      // Verificar que el objeto user tenga datos vÃ¡lidos
      if (!user.id || !user.nombre) {
        throw new Error("Invalid user data");
      }
    } catch (e) {
      console.error("Error parsing user data:", e);
      localStorage.clear();
      window.location.href = "/login";
    }
  })();
</script>

<script is:inline>
  function themeSetup() {
    const themeToggleBtn = document.getElementById("theme-toggle");
    if (!themeToggleBtn) return;

    const darkIcon = document.getElementById("theme-toggle-dark-icon");
    const lightIcon = document.getElementById("theme-toggle-light-icon");
    const docElement = document.documentElement;

    const applyTheme = (theme) => {
      if (theme === "light") {
        docElement.setAttribute("data-theme", "light");
        if (darkIcon) darkIcon.style.display = "block";
        if (lightIcon) lightIcon.style.display = "none";
      } else {
        docElement.removeAttribute("data-theme");
        if (darkIcon) darkIcon.style.display = "none";
        if (lightIcon) lightIcon.style.display = "block";
      }
    };

    const toggleTheme = () => {
      const currentThemeIsLight = docElement.hasAttribute("data-theme");
      const newTheme = currentThemeIsLight ? "dark" : "light";
      localStorage.setItem("theme", newTheme);
      applyTheme(newTheme);
    };

    themeToggleBtn.addEventListener("click", toggleTheme);

    // Initial load
    const savedTheme = localStorage.getItem("theme");
    const prefersDark =
      window.matchMedia &&
      window.matchMedia("(prefers-color-scheme: dark)").matches;

    if (savedTheme) {
      applyTheme(savedTheme);
    } else {
      applyTheme(prefersDark ? "dark" : "light");
    }
  }

  document.addEventListener("astro:page-load", themeSetup);
  // astro:page-load is usually sufficient, but running it directly helps with initial view transitions.
  themeSetup();
</script>
