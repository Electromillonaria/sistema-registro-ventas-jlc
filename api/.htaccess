# Apache Configuration for JLC Ventas API
# Enable CORS and security settings

# Enable Rewrite Engine
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /api/
</IfModule>

# CORS Headers - Allow requests from frontend
<IfModule mod_headers.c>
    # Allow all origins (adjust in production to specific domain)
    Header set Access-Control-Allow-Origin "*"
    
    # Allow common headers
    Header set Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With"
    
    # Allow common methods
    Header set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
    
    # Allow credentials
    Header set Access-Control-Allow-Credentials "true"
    
    # Handle preflight OPTIONS requests
    RewriteCond %{REQUEST_METHOD} OPTIONS
    RewriteRule ^(.*)$ $1 [R=200,L]
</IfModule>

# Security: Deny access to sensitive files
<FilesMatch "\.(db|sqlite|sqlite3|env|log|ini)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Security: Prevent directory listing
Options -Indexes

# PHP Settings
<IfModule mod_php7.c>
    php_flag display_errors Off
    php_flag log_errors On
    php_value error_log /tmp/php_errors.log
    php_value upload_max_filesize 5M
    php_value post_max_size 5M
</IfModule>

# Set default charset
AddDefaultCharset UTF-8
